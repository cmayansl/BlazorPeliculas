<div>
    <p>Título: <b>@Pelicula.Titulo</b></p>
    <p>Lanzamiento: <b>@Pelicula.Lanzamiento.ToString("dd/MM/yyyy")</b></p>
    @if (MostrarBoton)
    {
        <div>
            <button @onclick="EliminarPelicula">Borrar</button>
        </div>
    }

</div>

@code {
    [Parameter] public Pelicula Pelicula { get; set; }
    [Parameter] public bool MostrarBoton { get; set; } = false;
    void EliminarPelicula()
    {
        Console.WriteLine($"Eliminar pelicula {Pelicula.Titulo}");
    }
}
